# Production Environment Variables Template
# Copy this file to .env.production and fill in your production values

# Supabase Configuration (Production)
VITE_SUPABASE_URL=https://your-project-ref.supabase.co
VITE_SUPABASE_ANON_KEY=your_production_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_production_service_role_key_here

# Google Document AI Configuration (Production)
GOOGLE_APPLICATION_CREDENTIALS=path_to_production_service_account.json
GOOGLE_CLOUD_PROJECT_ID=your_production_project_id
GOOGLE_DOCUMENT_AI_LOCATION=us
GOOGLE_DOCUMENT_AI_PROCESSOR_ID=your_production_processor_id

# Stripe Configuration (Production)
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_production_webhook_secret_here
STRIPE_PRO_PRICE_ID=price_your_production_pro_price_id

# Security Keys (Generate new secure keys for production)
JWT_SECRET=your_extremely_secure_jwt_secret_key_here_minimum_32_chars
ENCRYPTION_KEY=your_extremely_secure_encryption_key_here_minimum_32_chars

# VirusTotal API (Production)
VIRUSTOTAL_API_KEY=your_production_virustotal_api_key_here

# Production Configuration
NODE_ENV=production
VITE_API_URL=https://your-production-domain.vercel.app

# Production Rate Limiting (More restrictive)
RATE_LIMIT_UPLOADS_PER_MINUTE=5
RATE_LIMIT_AUTH_ATTEMPTS=3
RATE_LIMIT_API_REQUESTS_PER_MINUTE=100

# Production File Processing Configuration
MAX_FILE_SIZE_MB=10
PROCESSING_TIMEOUT_SECONDS=60
TEMP_FILE_CLEANUP_HOURS=1

# Production Monitoring
LOG_LEVEL=error
ENABLE_ERROR_TRACKING=true
SENTRY_DSN=your_sentry_dsn_here_optional

# Production Database Configuration
DATABASE_CONNECTION_POOL_MIN=2
DATABASE_CONNECTION_POOL_MAX=10
DATABASE_STATEMENT_TIMEOUT=30000
DATABASE_IDLE_TIMEOUT=180000

# Production Security Configuration
CORS_ORIGIN=https://your-production-domain.vercel.app
SECURE_COOKIE=true
HTTPS_ONLY=true
TRUST_PROXY=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30